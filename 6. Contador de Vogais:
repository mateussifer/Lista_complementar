# Função para contar vogais
def contar_vogais(texto):
    vogais = "aeiouAEIOU"
    contador = 0
    for letra in texto:
        if letra in vogais:
            contador += 1
    return contador

# Programa principal
frase = input("Digite uma palavra ou frase: ")

quantidade = contar_vogais(frase)

print(f"A frase/palavra contém {quantidade} vogais.")
